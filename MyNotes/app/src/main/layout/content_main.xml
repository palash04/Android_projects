<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.kamble.palash.mynotes.MainActivity"
    tools:showIn="@layout/activity_main">

    <com.kamble.palash.mynotes.EmptyRecyclerView
        android:id="@+id/myRecycler"
        class="android.support.v7.widget.RecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:elevation="10dp" />

    <RelativeLayout
        android:id="@+id/noteEmptyView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/note1EmptyView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="No notes yet.."
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/note2EmptyView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Get started by adding your notes"
            android:textSize="16sp"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:layout_below="@id/note1EmptyView"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>




</RelativeLayout>